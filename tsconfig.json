{
    "compilerOptions": {
        "target": "esnext",
        "baseUrl": ".",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "downlevelIteration": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "module": "es2022",
        "paths": {
            "@powercord/*": ["src/renderer/powercord/*"],
            "@powercord": ["src/renderer/powercord/index"],
            "@data/*": ["src/renderer/data/*"],
            "@data": ["src/renderer/data/index"],
            "@modules/*": ["src/renderer/modules/*"],
            "@modules": ["src/renderer/modules/index"],
            "@ui/*": ["src/renderer/ui/*"],
            "@ui": ["src/renderer/ui/index"],
            "@common/*": ["src/common/*"],
            "@node": ["src/renderer/node/index"],
            "@node/*": ["src/renderer/node/*"],
            "@classes/": ["src/renderer/classes/*"],
            "@classes": ["src/renderer/classes/index"],
            "@flux/*": ["src/renderer/flux/*"],
            "@flux": ["src/renderer/flux/index"],
            "@decorators": ["src/renderer/decorators/index"],
            "@decorators/*": ["src/renderer/decorators/*"]
        }
    }
}